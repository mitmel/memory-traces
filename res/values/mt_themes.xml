<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LocastTheme" parent="@android:style/Theme.Light.NoTitleBar" />

    <style name="LocastTheme.MemoryTraces">
        <item name="android:colorForeground">@color/mt_foreground_light</item>
        <item name="android:colorForegroundInverse">@color/charred_orange_inverse</item>
        <item name="android:colorBackground">@android:color/white</item>
        <item name="android:textColorPrimary">?android:attr/colorForeground</item>
        <item name="android:textColorSecondary">?android:attr/colorForeground</item>
        <item name="android:typeface">serif</item>

        <!-- lists -->
        <item name="android:listViewStyle">@style/ListViewStyle</item>
        <item name="android:listDivider">@drawable/divider_horizontal_bright</item>

        <!-- windows -->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/mt_background_light</item>

        <!-- buttons -->
        <item name="android:buttonStyle">@style/Button.MemoryTraces</item>
        <item name="android:imageButtonStyle">@style/Button.MemoryTraces</item>
        <item name="android:buttonStyleSmall">@style/Button.MemoryTraces</item>
    </style>

</resources>